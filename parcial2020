programa otroparcial
areas
  area1:AreaP(50,50,50,50)
  area2:AreaP(51,51,51,51)
  area3:AreaP(52,52,52,52)
  area4:AreaP(53,53,53,53)
  areaj:AreaP(1,1,1,1)
  area5:AreaPC(15,15,15,15)
  areaL1:AreaP(5,4,5,15)
  areaL1a:AreaP(6,4,9,4)
  areaL2:AreaP(11,4,11,15)
  areaL2a:AreaP(12,4,15,4)
robots
  robot tipo1
  variables
    id:numero
    av:numero
    ca:numero
  comenzar
    RecibirMensaje(id,rj)
    si id=1
      Pos(5,4)
    si id=3
      Pos(11,4)
    repetir 11
      BloquearEsquina(15,15)
      av:=PosAv
      ca:=PosCa
      Pos(15,15)
      si HayPapelEnLaEsquina
        tomarPapel
      si HayFlorEnLaEsquina
        tomarFlor
      Pos(av,ca)
      LiberarEsquina(15,15)
      si HayPapelEnLaBolsa
        depositarPapel
      si HayFlorEnLaBolsa
        depositarFlor
      mover
      si HayFlorEnLaBolsa
        depositarFlor
      si HayPapelEnLaBolsa
        depositarPapel
    EnviarMensaje(id,rj)
  fin
  robot tipo2
  variables
    id:numero
    av:numero
    ca:numero
  comenzar
    RecibirMensaje(id,rj)
    si id=2
      Pos(6,4)
    si id=4
      Pos(12,4)
    derecha
    repetir 3
      BloquearEsquina(15,15)
      av:=PosAv
      ca:=PosCa
      Pos(15,15)
      si HayFlorEnLaEsquina
        tomarFlor
      si HayPapelEnLaEsquina
        tomarPapel
      Pos(av,ca)
      LiberarEsquina(15,15)
      si HayFlorEnLaBolsa
        depositarFlor
      si HayPapelEnLaBolsa
        depositarPapel
      mover
    si HayFlorEnLaBolsa
      depositaFlor
    si HayPapelEnLaBolsa
      deposutarPapel
    EnviarMensaje(id,rj)
  fin
  robot tipoj
  variables
    a:numero
    b:numero
    c:numero
    id:numero
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
    EnviarMensaje(4,r4)
    repetir 4
      RecibirMensaje(id,*)
      si (id=1)|(id=2)
        a:=a+1
      si (id=3)|(id=4)
        b:=b+1
      si a=2
        c:=1
      si b=2
        c:=2
    Informar(c)
  fin
variables
  r1:tipo1
  r2:tipo2
  r3:tipo1
  r4:tipo2
  rj:tipoj
comenzar
  AsignarArea(r1,area1)
  AsignarArea(r1,areaL1)
  AsignarArea(r1,area5)
  AsignarArea(r2,area2)
  AsignarArea(r2,areaL1a)
  AsignarArea(r2,area5)
  AsignarArea(r3,area3)
  AsignarArea(r3,areaL2)
  AsignarArea(r3,area5)
  AsignarArea(r4,area4)
  AsignarArea(r4,areaL2a)
  AsignarArea(r4,area5)
  AsignarArea(rj,areaj)
  Iniciar(r1,50,50)
  Iniciar(r2,51,51)
  Iniciar(r3,52,52)
  Iniciar(r4,53,53)
  Iniciar(rj,1,1)
fin
